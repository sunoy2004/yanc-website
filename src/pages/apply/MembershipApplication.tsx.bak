import React, { useState, useEffect } from 'react';
import { Link, useNavigate } from 'react-router-dom';
import { ChevronLeft, ChevronRight, Download, User, MapPin, Briefcase, Target, FileText } from 'lucide-react';

const MembershipApplication = () => {
  const [currentStep, setCurrentStep] = useState(1);
  const [isSubmitting, setIsSubmitting] = useState(false);
  const navigate = useNavigate();

  // Form data state
  const [formData, setFormData] = useState({
    // Step 1
    fullName: '',
    email: '',
    phone: '',
    age: '',
    // Step 2
    street: '',
    state: '',
    city: '',
    preferredState: '',
    preferredCity: '',
    educationLevel: '',
    graduationYear: '',
    fieldOfStudy: '',
    institution: '',
    // Step 3
    experience: '',
    skills: [] as string[],
    availability: [] as string[],
    timeCommitment: '',
    // Step 4
    whyJoin: '',
    skillsToDevelop: '',
    networkingPerspective: '',
    howContribute: '',
    vision: '',
    introduceYourself: '',
    mentorship: '',
    leadership: '',
    inspiration: '',
    // Step 5
    profilePhoto: null as File | null,
    resume: null as File | null,
    video: null as File | null,
    linkedin: '',
    socialMedia: '',
    startDate: '',
    comments: '',
    subscription: ''
  });

  const [errors, setErrors] = useState<Record<string, string>>({});

  // Skills list
  const skillsList = [
    'JavaScript', 'Python', 'React', 'Node.js', 'HTML/CSS', 'Java', 'C++', 'SQL',
    'Project Management', 'Leadership', 'Communication', 'Problem Solving',
    'Data Analysis', 'Marketing', 'Design', 'Sales', 'Writing', 'Teaching',
    'Event Management', 'Social Media', 'Content Creation', 'Public Speaking',
    'Networking', 'Mentoring', 'Team Building', 'Strategic Planning'
  ];

  // Steps configuration
  const steps = [
    { id: 1, title: 'Personal Information', icon: User },
    { id: 2, title: 'Location & Education', icon: MapPin },
    { id: 3, title: 'Experience & Skills', icon: Briefcase },
    { id: 4, title: 'Motivation & Goals', icon: Target },
    { id: 5, title: 'Files & Submission', icon: FileText }
  ];

  // Handle input changes
  const handleChange = (e: React.ChangeEvent<HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement>) => {
    const { name, value } = e.target;
    setFormData(prev => ({ ...prev, [name]: value }));
    
    // Clear error when user starts typing
    if (errors[name]) {
      setErrors(prev => {
        const newErrors = { ...prev };
        delete newErrors[name];
        return newErrors;
      });
    }
  };

  // Handle checkbox changes
  const handleCheckboxChange = (name: string, value: string) => {
    setFormData(prev => {
      const currentArray = prev[name as keyof typeof prev] as string[];
      const newArray = currentArray.includes(value)
        ? currentArray.filter(item => item !== value)
        : [...currentArray, value];
      return { ...prev, [name]: newArray };
    });
  };

  // Handle file uploads
  const handleFileUpload = (name: string, file: File | null) => {
    setFormData(prev => ({ ...prev, [name]: file }));
  };

  // Validate current step
  const validateStep = (step: number) => {
    const newErrors: Record<string, string> = {};
    
    switch (step) {
      case 1:
        if (!formData.fullName.trim()) newErrors.fullName = 'Full name is required';
        if (!formData.email.trim()) newErrors.email = 'Email is required';
        else if (!/\S+@\S+\.\S+/.test(formData.email)) newErrors.email = 'Email is invalid';
        if (!formData.phone.trim()) newErrors.phone = 'Phone number is required';
        else if (!/^\d{10}$/.test(formData.phone)) newErrors.phone = 'Phone must be 10 digits';
        if (!formData.age) newErrors.age = 'Age is required';
        else if (parseInt(formData.age) < 18 || parseInt(formData.age) > 25) newErrors.age = 'Age must be between 18-25';
        break;
      case 2:
        if (!formData.street.trim()) newErrors.street = 'Street address is required';
        if (!formData.state) newErrors.state = 'State is required';
        if (!formData.city.trim()) newErrors.city = 'City is required';
        if (!formData.preferredState) newErrors.preferredState = 'Preferred state is required';
        if (!formData.preferredCity.trim()) newErrors.preferredCity = 'Preferred city is required';
        if (!formData.educationLevel) newErrors.educationLevel = 'Education level is required';
        if (!formData.fieldOfStudy.trim()) newErrors.fieldOfStudy = 'Field of study is required';
        if (!formData.institution.trim()) newErrors.institution = 'Institution is required';
        break;
      case 3:
        if (!formData.experience) newErrors.experience = 'Years of experience is required';
        if (formData.skills.length === 0) newErrors.skills = 'At least one skill is required';
        if (formData.availability.length === 0) newErrors.availability = 'At least one day is required';
        if (!formData.timeCommitment.trim()) newErrors.timeCommitment = 'Time commitment is required';
        break;
      case 4:
        if (!formData.whyJoin.trim()) newErrors.whyJoin = 'This field is required';
        if (!formData.skillsToDevelop.trim()) newErrors.skillsToDevelop = 'This field is required';
        if (!formData.networkingPerspective.trim()) newErrors.networkingPerspective = 'This field is required';
        if (!formData.howContribute.trim()) newErrors.howContribute = 'This field is required';
        if (!formData.vision.trim()) newErrors.vision = 'This field is required';
        if (!formData.introduceYourself.trim()) newErrors.introduceYourself = 'This field is required';
        break;
      case 5:
        if (!formData.profilePhoto) newErrors.profilePhoto = 'Profile photo is required';
        if (!formData.resume) newErrors.resume = 'Resume is required';
        if (!formData.linkedin.trim()) newErrors.linkedin = 'LinkedIn URL is required';
        if (!formData.startDate) newErrors.startDate = 'Preferred start date is required';
        if (!formData.subscription) newErrors.subscription = 'Subscription plan is required';
        break;
    }
    
    setErrors(newErrors);
    return Object.keys(newErrors).length === 0;
  };

  // Navigation
  const goToNext = () => {
    if (validateStep(currentStep)) {
      setCurrentStep(prev => Math.min(prev + 1, 5));
    }
  };

  const goToPrev = () => {
    setCurrentStep(prev => Math.max(prev - 1, 1));
  };

  // Download guide
  const handleDownloadGuide = () => {
    // Placeholder URL
    const guideUrl = 'https://yanc.com/membership-guide.pdf';
    window.open(guideUrl, '_blank');
  };

  // Submit handler
  const handleSubmit = () => {
    if (validateStep(currentStep)) {
      setIsSubmitting(true);
      
      // Placeholder for backend integration
      // TODO: Add API endpoint: /api/membership-application
      // TODO: Add auth headers and payload processing
      setTimeout(() => {
        console.log('Membership application submitted:', formData);
        setIsSubmitting(false);
        navigate('/success');
      }, 2000);
    }
  };

  // Get step component
  const StepComponent = () => {
    switch (currentStep) {
      case 1: return <Step1 formData={formData} errors={errors} onChange={handleChange} />;
      case 2: return <Step2 formData={formData} errors={errors} onChange={handleChange} />;
      case 3: return <Step3 formData={formData} errors={errors} onChange={handleChange} handleCheckbox={handleCheckboxChange} />;
      case 4: return <Step4 formData={formData} errors={errors} onChange={handleChange} />;
      case 5: return <Step5 formData={formData} errors={errors} onChange={handleChange} handleFileUpload={handleFileUpload} />;
      default: return <div>Step not found</div>;
    }
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-background via-card to-background">
      {/* Header */}
      <div className="bg-card border-b border-border">
        <div className="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
          <div className="flex items-center space-x-4">
            <img 
              src="/favicon.svg" 
              alt="YANC Logo" 
              className="w-10 h-10 object-contain"
            />
            <div className="h-6 w-px bg-border"></div>
            <h1 className="text-lg font-medium">Membership Application</h1>
          </div>
          
          <div className="flex items-center space-x-4">
            <button 
              onClick={handleDownloadGuide}
              className="flex items-center space-x-2 text-sm text-primary hover:text-primary/80 transition-colors"
            >
              <Download className="w-4 h-4" />
              <span>Walk Me</span>
            </button>
            <div className="h-4 w-px bg-border"></div>
            <button 
              onClick={() => {
                sessionStorage.setItem('fromNavigation', 'true');
                window.location.href = '/';
              }}
              className="text-sm text-muted-foreground hover:text-foreground transition-colors"
            >
              Back to Home
            </button>
          </div>
        </div>
      </div>

      <div className="max-w-4xl mx-auto px-4 py-8">
        {/* Progress Indicator */}
        <div className="bg-card rounded-lg p-6 border border-border shadow-sm mb-8">
          <div className="flex justify-between items-center mb-4">
            <h2 className="text-2xl font-bold text-foreground">YANC Membership Application</h2>
            <span className="text-sm text-muted-foreground">Step {currentStep} of 5</span>
          </div>
          
          <div className="grid grid-cols-5 gap-2 w-full">
            {steps.map((step, index) => {
              const isActive = step.id <= currentStep;
              return (
                <div 
                  key={step.id}
                  className={`flex flex-col items-center justify-center px-4 py-3 rounded-lg transition-all w-full h-full ${
                    step.id <= currentStep
                      ? step.id === currentStep
                        ? "bg-primary text-primary-foreground shadow-lg transform -translate-y-1"
                        : "bg-primary/20 text-primary"
                      : "bg-muted text-muted-foreground"
                  }`}
                >
                  <span className="text-lg font-bold">{index + 1}</span>
                  <span className="text-xs mt-1 text-center">{step.title}</span>
                </div>
              );
            })}
          </div>
          </div>
        </div>

        {/* Form Content */}
        <div className="bg-card rounded-2xl p-8 border border-border shadow-lg">
          <StepComponent />
          
          {/* Navigation Buttons */}
          <div className="flex justify-between mt-8 pt-6 border-t border-border">
            <button
              onClick={goToPrev}
              disabled={currentStep === 1}
              className="flex items-center space-x-2 px-6 py-3 rounded-xl border border-border text-foreground hover:bg-secondary hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed transition-all"
            >
              <ChevronLeft className="w-5 h-5" />
              <span>Previous</span>
            </button>
            
            {currentStep < 5 ? (
              <button
                onClick={goToNext}
                className="flex items-center space-x-2 px-8 py-3 rounded-xl bg-gradient-to-r from-primary to-primary/80 text-primary-foreground hover:from-primary/90 hover:to-primary shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5"
              >
                <span className="font-medium">Next</span>
                <ChevronRight className="w-5 h-5" />
              </button>
            ) : (
              <button
                onClick={handleSubmit}
                disabled={isSubmitting}
                className="px-10 py-3 rounded-xl bg-gradient-to-r from-primary to-primary/80 text-primary-foreground hover:from-primary/90 hover:to-primary shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none"
              >
                {isSubmitting ? (
                  <span className="flex items-center">
                    <span className="animate-spin rounded-full h-4 w-4 border-b-2 border-primary-foreground mr-2"></span>
                    Submitting...
                  </span>
                ) : (
                  'Submit Application'
                )}
              </button>
            )}
          </div>
        </div>
      </div>
    </div>
  );
};

